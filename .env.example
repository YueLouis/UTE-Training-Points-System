# =========================
# EMAIL (SMTP for notifications)
# =========================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here

# Gmail App Password setup: https://support.google.com/accounts/answer/185833

# =========================
# RESEND API (for password reset link)
# =========================
RESEND_API_KEY=re_xxxxx_your_resend_api_key
APP_MAIL_FROM="UTE Training Points <noreply@resend.dev>"

# Resend setup: https://resend.com
# Can use onboarding@resend.dev by default without domain verification

# =========================
# PASSWORD RESET CONFIGURATION
# =========================
RESET_TOKEN_EXPIRY=15
# Token expiration time in minutes

RESET_PEPPER=your_secret_pepper_key_at_least_32_chars
# Server-side secret for token hashing (change in production!)

RESET_FRONTEND_URL=https://your-frontend-domain.com/reset-password
# Frontend URL where user will reset password
# Format: {RESET_FRONTEND_URL}?token={RAW_TOKEN}

# =========================
# JWT SECRET (for production)
# =========================
JWT_SECRET=your_secret_key_here_at_least_256_bits
JWT_ACCESS_EXPIRATION=1800000
# 30 minutes in milliseconds
JWT_REFRESH_EXPIRATION=604800000
# 7 days in milliseconds

# =========================
# DATABASE (MySQL)
# =========================
DB_HOST=localhost
DB_PORT=3306
DB_NAME=training_points_db
DB_USERNAME=root
DB_PASSWORD=your_password_here

# Railway MySQL Public URL format:
# spring.datasource.url=jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=Asia/Ho_Chi_Minh

# =========================
# APPLICATION
# =========================
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=development

# =========================
# OTP / PASSWORD RESET (Legacy - if still used)
# =========================
OTP_EXPIRATION_SECONDS=120

