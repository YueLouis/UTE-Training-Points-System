<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F6F0FF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Chỉnh sửa sự kiện"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#111"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="6dp"
            android:src="@drawable/back_icon"
            app:layout_constraintTop_toTopOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp"
            android:background="@drawable/bg_card"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cập nhật thông tin sự kiện bên dưới"
                android:textSize="12sp"
                android:textColor="#666"
                android:layout_marginBottom="10dp" />

            <!-- Row: HK + Loại + Điểm -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Học kì:"
                        android:textStyle="bold"
                        android:textColor="#333"/>

                    <Spinner
                        android:id="@+id/spSemester"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_field"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.0"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loại:"
                        android:textColor="#333"
                        android:textStyle="bold"/>

                    <Spinner
                        android:id="@+id/spCategory"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_field"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Điểm:"
                        android:textColor="#333"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/edtPointValue"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_field"
                        android:hint="VD: 5"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề:"
                android:textStyle="bold"
                android:textColor="#333"/>

            <EditText
                android:id="@+id/edtTitle"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_field"
                android:hint="Nhập tiêu đề"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mô tả:"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edtDesc"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/bg_field"
                android:hint="Nhập mô tả"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:layout_marginTop="6dp"/>

            <!-- Start -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bắt đầu:"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/layoutStartTime"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_field"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/edtStartTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Chạm để chọn"
                    android:focusable="false"
                    android:clickable="true"
                    android:padding="0dp" />

                <ImageView
                    android:id="@+id/ivStartTime"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/calendar_icon2"
                    android:contentDescription="Chọn thời gian bắt đầu"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- End -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kết thúc:"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:id="@+id/layoutEndTime"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_field"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/edtEndTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:hint="Chạm để chọn"
                    android:focusable="false"
                    android:clickable="true"
                    android:padding="0dp" />

                <ImageView
                    android:id="@+id/ivEndTime"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/calendar_icon2"
                    android:contentDescription="Chọn thời gian kết thúc"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Deadline -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hạn đăng ký:"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edtDeadline"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_field"
                android:hint="Chạm để chọn"
                android:focusable="false"
                android:clickable="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="6dp"/>

            <!-- Mode + Max -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hình thức:"
                        android:textStyle="bold"
                        android:textColor="#333"/>

                    <Spinner
                        android:id="@+id/spEventMode"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_field"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số lượng:"
                        android:textStyle="bold"
                        android:textColor="#333"/>

                    <EditText
                        android:id="@+id/edtMaxParticipants"
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:background="@drawable/bg_field"
                        android:hint="VD: 300"
                        android:inputType="number"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                android:id="@+id/groupLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Địa điểm:"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <EditText
                    android:id="@+id/edtLocation"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_field"
                    android:hint="Nhập địa điểm"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Survey -->
            <LinearLayout
                android:id="@+id/groupSurvey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Link khảo sát (nếu có):"
                    android:textStyle="bold"
                    android:textColor="#333"/>

                <EditText
                    android:id="@+id/edtSurveyUrl"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_field"
                    android:hint="https://..."
                    android:inputType="textUri"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mã khảo sát (nếu có):"
                    android:textStyle="bold"
                    android:textColor="#333"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/edtSurveySecretCode"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_field"
                    android:hint="VD: ABC123"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- Banner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Banner URL (nếu có):"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/edtBannerUrl"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/bg_field"
                android:hint="https://... (optional)"
                android:inputType="textUri"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="6dp"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="LƯU"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1EC445"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
